<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="342dp"
        android:layout_height="48dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="8dp"
        android:text="En attente d'un adversaire ..."
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/opponentTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/opponentTextView"
        android:layout_width="116dp"
        android:layout_height="43dp"
        android:layout_marginBottom="609dp"
        android:text="En attente"
        android:textAlignment="center"
        android:textColor="#757575"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statusTextView" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="299dp"
        android:layout_height="280dp"
        android:background="#5B150000"
        android:divider="#00018786"
        android:measureWithLargestChild="true"
        android:showDividers="middle"
        android:stretchColumns="0.3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/opponentTextView">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:divider="#00018786"
            android:showDividers="middle">

            <Button
                android:id="@+id/button0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:backgroundTint="#FAFAFA"
                android:onClick="buttonClicked"
                android:scaleX="0.95"
                android:scaleY="0.95"
                android:tag="0"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:backgroundTint="#FAFAFA"
                android:onClick="buttonClicked"
                android:scaleX="0.95"
                android:scaleY="0.95"
                android:tag="1"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:backgroundTint="#FAFAFA"
                android:onClick="buttonClicked"
                android:scaleX="0.95"
                android:scaleY="0.95"
                android:tag="2"
                tools:ignore="SpeakableTextPresentCheck" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:divider="#00018786"
            android:showDividers="middle">

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:backgroundTint="#FAFAFA"
                android:onClick="buttonClicked"
                android:scaleX="0.95"
                android:scaleY="0.95"
                android:tag="3"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:backgroundTint="#FAFAFA"
                android:onClick="buttonClicked"
                android:scaleX="0.95"
                android:scaleY="0.95"
                android:tag="4"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:backgroundTint="#FAFAFA"
                android:onClick="buttonClicked"
                android:scaleX="0.95"
                android:scaleY="0.95"
                android:tag="5"
                tools:ignore="SpeakableTextPresentCheck" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:layout_weight="1"
            android:divider="#00018786"
            android:showDividers="middle">

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:backgroundTint="#FAFAFA"
                android:onClick="buttonClicked"
                android:scaleX="0.95"
                android:scaleY="0.95"
                android:tag="6"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:backgroundTint="#FAFAFA"
                android:onClick="buttonClicked"
                android:scaleX="0.95"
                android:scaleY="0.95"
                android:tag="7"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:backgroundTint="#FAFAFA"
                android:onClick="buttonClicked"
                android:scaleX="0.95"
                android:scaleY="0.95"
                android:tag="8"
                tools:ignore="SpeakableTextPresentCheck" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/tourTextView"
        android:layout_width="226dp"
        android:layout_height="32dp"
        android:text="A vous de jouer !"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/opponentTextView"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>